---
layout: 'layouts/default'
---

<h1>Pets that are colored {{ color_grouping.color }}</h1>

<ol>
{% for object in color_grouping.objects %}
  {% assign pet = object.data %}
  <li><a href="{{ pet.page.url | url }}">{{ pet.name }}</a></li>
{% endfor %}
</ol>

<nav aria-labelledby="my-pagination">
  <h2 id="my-pagination">All the "pet gallery" pages</h2>
  <ol>
    <li>{% if page.url != pagination.href.first %}<a href="{{ pagination.href.first }}">First</a>{% else %}First{% endif %}</li>
    <li>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Previous</a>{% else %}Previous{% endif %}</li>
    {%- for pageEntry in pagination.pages %}
      {%- capture idx -%}{{forloop.index | minus: 1}}{%- endcapture -%}
      <li>{% if page.url != pagination.hrefs[idx] %}<a href="{{ pagination.hrefs[idx] }}">Page {{ idx }} <i>({{ pageEntry.color }})</i></a>{% else %}Page {{ idx }} <i>({{ pageEntry.color }})</i>{% endif %}
    {%- endfor %}
    <li>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Next</a>{% else %}Next{% endif %}</li>
    <li>{% if page.url != pagination.href.last %}<a href="{{ pagination.href.last }}">Last</a>{% else %}Last{% endif %}</li>
  </ol>
</nav>